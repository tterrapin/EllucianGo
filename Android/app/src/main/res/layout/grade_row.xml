<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/grade_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="@dimen/section_header_padding">
	
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
        
	    <TextView
	        android:id="@+id/grade_row_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium">
	    </TextView>
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	
	        <TextView
	            android:id="@+id/grade_row_date_label"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:paddingRight="2sp"
	            android:paddingEnd="2sp"
	            android:text="@string/grades_last_updated" >
	        </TextView>
	
	        <TextView
	            android:id="@+id/grade_row_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content">
	        </TextView>
	        
	    </LinearLayout>
	</LinearLayout>
	
    <TextView
        android:id="@+id/grade_row_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" >
    </TextView>

</LinearLayout>