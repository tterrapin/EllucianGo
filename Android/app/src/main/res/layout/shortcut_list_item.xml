<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shortcut_item_divider"
        android:contentDescription="@null"/>

  <LinearLayout
              android:id="@+id/drawer_list_item"
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:paddingBottom="6dp"
              android:paddingStart="6dp"
              android:paddingEnd="6dp"
              android:paddingLeft="6dp"
              android:paddingRight="6dp"
              android:paddingTop="6dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/shortcut_item_image"
        style="@style/homeScreenIcons"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginStart="13dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/shortcut_item_label"
        style="@style/homeScreenShortcutText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_large"/>

    <ImageView
        android:id="@+id/shortcut_item_lock_image"
        style="@style/homeScreenIcons"
        android:layout_width="13dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/menu_lock_icon"
        android:contentDescription="@null"
        android:visibility="gone" />

    </LinearLayout>

</LinearLayout>