<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/seats_available_box"
    android:visibility="gone"
    android:layout_width="92dp"
    android:layout_height="16dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="false"
    android:layout_marginLeft="15dp"
    android:layout_marginStart="15dp"
    android:background="@drawable/course_seats_box"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/seats_available_image"
        android:contentDescription="@string/available_seats"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/seats_available_text"
        android:layout_toLeftOf="@+id/seats_available_text"/>

    <TextView
        android:id="@+id/seats_available_text"
        android:layout_centerVertical="true"
        style="@style/seatsAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:ellipsize="end"
        android:maxLines="1"/>

</RelativeLayout>
